                },
                {
                  "key": "category",
                  "value": "1",
                  "disabled": true,
                  "description": "Filter by category ID"
                },
                {
                  "key": "search",
                  "value": "cyber",
                  "disabled": true,
                  "description": "Search games by name"
                }
              ]
            },
            "description": "Retrieve all games with optional filtering and pagination"
          },
          "response": []
