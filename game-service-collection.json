        {
          "name": "Create Game",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.game.id) {",
                  "        pm.collectionVariables.set('gameId', response.data.game.id);",
                  "        console.log('Game ID saved:', response.data.game.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Cyberpunk 2077\",\n  \"categoryId\": 1,\n  \"price\": 59.99,\n  \"originalPrice\": 79.99,\n  \"image\": \"cyberpunk2077.jpg\",\n  \"filters\": [\"AAA\", \"RPG\", \"Open World\"]\n}",
              "options": {
